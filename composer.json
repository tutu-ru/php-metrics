{
  "name": "tutu-ru/lib-metrics",
  "license": "proprietary",
  "description": "Metrics",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "TutuRu\\Metrics\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TutuRu\\Tests\\Metrics\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit -c phpunit.xml --colors=always"
    ],
    "cs": [
      "vendor/bin/phpcs --standard=.phpcs.xml ."
    ]
  }
}
